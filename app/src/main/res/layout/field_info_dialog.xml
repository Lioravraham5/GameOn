<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_window_background">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!--Field name-->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/field_info_dialog_LBL_field_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!--field type name-->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/field_info_dialog_LBL_field_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field type"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!--order button-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/field_info_dialog_BTN_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order"
            android:backgroundTint="@color/blue_800_dark"
            android:textSize="15sp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>